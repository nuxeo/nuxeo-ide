<panel cols="1" layout="grid">

  <frame label="Nuxeo Distribution Used" cols="2" layout="grid"
         hfill="true">
    <text>Nuxeo Version:</text>
    <textbox id="parentVersion" hfill="true" readonly="true" value="5.8"/>
    <text colspan="2" halign="right">
      Nuxeo distribution version from your current SDK.
    </text>
    <text>Nuxeo Distribution:</text>
    <combo id="mpDistribution" hfill="true" readonly="true" value="dm">
      coreserver,
      cap,
      dm,
      dam,
      social-collaboration
    </combo>
    <text colspan="2" halign="right">
      Set the Nuxeo distribution supported by your Marketplace Package.
    </text>
  </frame>

